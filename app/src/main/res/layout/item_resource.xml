<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/gap_small"
    android:layout_marginTop="@dimen/gap_small"
    android:layout_marginEnd="@dimen/gap_small"
    android:background="@drawable/rect_corner_border_pink"
    android:padding="@dimen/gap_small">

    <TextView
        android:id="@+id/tv_resource_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tien mat"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_resource_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chi tieu"
        app:layout_constraintStart_toStartOf="@+id/tv_resource_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_resource_name" />

    <TextView
        android:id="@+id/tv_current_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_xsmall"
        android:text="Current: 50k"
        android:textSize="@dimen/text_size_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_resource_name" />

    <TextView
        android:id="@+id/tv_open_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gap_xsmall"
        android:text="Open: 50k"
        android:textSize="@dimen/text_size_big"
        app:layout_constraintBottom_toBottomOf="@+id/tv_resource_desc"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>