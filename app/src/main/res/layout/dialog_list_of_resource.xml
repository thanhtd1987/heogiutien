<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_dialog_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/gap_small"
        android:background="@color/primary400_light"
        android:text="List of Resource:"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_big"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_dialog_list_resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dialog_label"
        android:padding="@dimen/gap_small"
        />
</RelativeLayout>