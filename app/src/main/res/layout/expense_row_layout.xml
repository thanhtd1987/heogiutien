<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/rect_corner_border_pri"
    android:padding="@dimen/gap_xsmall"
    android:layout_marginTop="@dimen/gap_small"
    android:layout_marginStart="@dimen/gap_small"
    android:layout_marginEnd="@dimen/gap_small">

    <ImageView
        android:id="@+id/iv_row_ic_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_remove" />

    <TextView
        android:id="@+id/tv_row_money_amount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/gap_small"
        android:layout_marginRight="@dimen/gap_small"
        android:gravity="center"
        android:textSize="@dimen/text_size_big"
        android:textColor="@color/colorPrimary"
        android:text="20k" />

    <TextView
        android:id="@+id/tv_row_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_small"
        android:layout_marginRight="@dimen/gap_small"
        android:layout_toStartOf="@+id/tv_row_money_amount"
        android:layout_toEndOf="@+id/iv_row_ic_type"
        android:gravity="center"
        android:maxLines="1"
        android:text="an sang"
        android:textAlignment="viewStart"
        android:textSize="@dimen/text_size_big" />

    <TextView
        android:id="@+id/tv_row_money_source"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_row_reason"
        android:layout_marginLeft="@dimen/gap_small"
        android:layout_marginRight="@dimen/gap_small"
        android:layout_toEndOf="@id/iv_row_ic_type"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:text="tien mat" />

    <TextView
        android:id="@+id/tv_row_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/tv_row_money_source"
        android:layout_toEndOf="@id/tv_row_money_source"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:text="20-05 08:15" />

</RelativeLayout>