<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_expense_report"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:background="@color/colorAccent"
            android:padding="@dimen/gap_small"
            android:src="@drawable/ic_expense_report" />

        <ImageView
            android:id="@+id/iv_account"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:layout_alignTop="@+id/iv_expense_report"
            android:layout_toRightOf="@+id/iv_expense_report"
            android:background="@color/colorPrimary"
            android:padding="@dimen/gap_small"
            android:src="@drawable/ic_resource" />

        <ImageView
            android:id="@+id/iv_statistic"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:layout_alignLeft="@+id/iv_expense_report"
            android:layout_alignRight="@+id/iv_expense_report"
            android:layout_below="@+id/iv_expense_report"
            android:background="@color/colorPrimary"
            android:padding="@dimen/gap_small"
            android:src="@drawable/ic_statistic" />

        <ImageView
            android:id="@+id/iv_saving"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:layout_alignLeft="@+id/iv_account"
            android:layout_below="@+id/iv_expense_report"
            android:layout_centerInParent="true"
            android:background="@color/colorAccent"
            android:padding="@dimen/gap_small"
            android:src="@drawable/ic_saving" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:padding="@dimen/gap_normal"
        android:src="@drawable/ic_settings_black_24dp" />

    <ImageView
        android:id="@+id/iv_add_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:padding="16dp"
        android:visibility="gone"
        android:src="@android:drawable/ic_input_add" />

</RelativeLayout>