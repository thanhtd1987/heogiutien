<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.funworld.heogiutien.features.resource.list.ResourcesActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height">

        <TextView
            android:id="@+id/tv_title_text"
            style="@style/text_bold_big_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/resource" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_title_text"
            android:layout_alignTop="@+id/tv_title_text"
            android:padding="@dimen/gap_small"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <ImageView
            android:id="@+id/iv_add_resouce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_title_text"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_title_text"
            android:padding="@dimen/gap_small"
            android:src="@drawable/ic_add_white_24dp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_resources"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top"
        />
</RelativeLayout>
